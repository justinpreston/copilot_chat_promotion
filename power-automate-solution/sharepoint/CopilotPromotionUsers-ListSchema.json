{
  "listName": "CopilotPromotionUsers",
  "description": "Stores target users for Copilot Chat promotional campaigns",
  "columns": [
    {
      "name": "Title",
      "type": "Text",
      "displayName": "Display Name",
      "description": "User's display name (optional)",
      "required": false
    },
    {
      "name": "UPN",
      "type": "Text",
      "displayName": "User Principal Name",
      "description": "User's email/UPN (e.g., john.doe@contoso.com)",
      "required": true,
      "indexed": true
    },
    {
      "name": "UserType",
      "type": "Choice",
      "displayName": "User Type",
      "description": "Whether user has M365 Copilot license",
      "required": true,
      "choices": ["Licensed", "NonLicensed"],
      "defaultValue": "Licensed"
    },
    {
      "name": "Status",
      "type": "Choice",
      "displayName": "Status",
      "description": "Current status of message delivery",
      "required": false,
      "choices": ["Pending", "Sent", "Failed", "Skipped"],
      "defaultValue": "Pending"
    },
    {
      "name": "WeekSent",
      "type": "Text",
      "displayName": "Week Sent",
      "description": "Which campaign week was sent (1, 2, 3, or 4)",
      "required": false
    },
    {
      "name": "SentDate",
      "type": "DateTime",
      "displayName": "Sent Date",
      "description": "Date/time the message was sent",
      "required": false
    },
    {
      "name": "ErrorMessage",
      "type": "Text",
      "displayName": "Error Message",
      "description": "Error details if delivery failed",
      "required": false,
      "maxLength": 255
    },
    {
      "name": "Department",
      "type": "Text",
      "displayName": "Department",
      "description": "User's department (for filtering/reporting)",
      "required": false
    },
    {
      "name": "EnrollmentDate",
      "type": "DateTime",
      "displayName": "Enrollment Date",
      "description": "When user was added to the campaign",
      "required": false,
      "defaultValue": "[Today]"
    }
  ],
  "views": [
    {
      "name": "All Users",
      "description": "All users in the campaign",
      "query": "",
      "columns": ["UPN", "UserType", "Status", "WeekSent", "SentDate", "Department"]
    },
    {
      "name": "Pending",
      "description": "Users awaiting message delivery",
      "query": "Status eq 'Pending' or Status eq null",
      "columns": ["UPN", "UserType", "Department", "EnrollmentDate"]
    },
    {
      "name": "Sent Successfully",
      "description": "Users who received messages",
      "query": "Status eq 'Sent'",
      "columns": ["UPN", "UserType", "WeekSent", "SentDate"]
    },
    {
      "name": "Failed",
      "description": "Users with delivery failures",
      "query": "Status eq 'Failed'",
      "columns": ["UPN", "ErrorMessage", "SentDate"]
    },
    {
      "name": "Licensed Users",
      "description": "Users with M365 Copilot licenses",
      "query": "UserType eq 'Licensed'",
      "columns": ["UPN", "Status", "WeekSent", "SentDate"]
    },
    {
      "name": "Non-Licensed Users",
      "description": "Users without M365 Copilot licenses (Copilot Chat Web)",
      "query": "UserType eq 'NonLicensed'",
      "columns": ["UPN", "Status", "WeekSent", "SentDate"]
    }
  ],
  "sampleData": [
    {
      "Title": "John Doe",
      "UPN": "john.doe@contoso.com",
      "UserType": "Licensed",
      "Status": "Pending",
      "Department": "Sales"
    },
    {
      "Title": "Jane Smith",
      "UPN": "jane.smith@contoso.com",
      "UserType": "Licensed",
      "Status": "Pending",
      "Department": "Marketing"
    },
    {
      "Title": "Bob Johnson",
      "UPN": "bob.johnson@contoso.com",
      "UserType": "NonLicensed",
      "Status": "Pending",
      "Department": "Engineering"
    }
  ]
}
